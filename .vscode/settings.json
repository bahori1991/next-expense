{
  "cSpell.words": [
    "cuid",
    "devcontainers",
    "localtime",
    "noninteractive",
    "turbopack",
    "tzdata",
    "vercel",
    "zoneinfo"
  ],
  "files.exclude": {
    "node_modules": true,
    ".next": true,
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  }
}